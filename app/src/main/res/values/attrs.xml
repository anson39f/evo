<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PaperButton">
        <attr name="paper_text" format="string"/>
        <attr name="paper_text_size" format="dimension"/>
        <attr name="paper_text_color" format="color"/>
        <attr name="paper_font" format="string"/>
        <attr name="paper_color" format="color"/>
        <attr name="paper_corner_radius" format="dimension"/>
        <attr name="paper_shadow_radius" format="float"/>
        <attr name="paper_shadow_offset_x" format="float"/>
        <attr name="paper_shadow_offset_y" format="float"/>
        <attr name="paper_shadow_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="EditTextLayout">
        <attr name="icon" format="reference" />
        <attr name="hint" format="string|reference" />
        <attr name="text" format="string|reference" />
        <attr name="textColor" format="color|reference" />
        <attr name="hintColor" format="color|reference" />
        <attr name="input_enabled" format="boolean" />
        <attr name="close_auto" format="boolean" />
        <attr name="close_show" format="boolean" />
    </declare-styleable>


    <declare-styleable name="ColorImageView">
        <attr name="bgcolor" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="RippleLayout">
        <attr name="count" format="integer" />
    </declare-styleable>


    <declare-styleable name="SettingItemNormal">
        <attr name="item_title" format="string|reference" />
        <attr name="summary" format="string|reference" />
        <attr name="showSwitch" format="boolean" />
        <attr name="checked" format="boolean" />
        <attr name="detach" format="boolean" />
    </declare-styleable>
</resources>
