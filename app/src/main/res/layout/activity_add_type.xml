<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:widget="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title_toolbar"/>

    <EditText
        android:id="@+id/etType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/rect_gray"
        android:gravity="start"
        android:hint="输入分类名称"
        android:minHeight="50dp"
        android:padding="5dp"
        android:textSize="@dimen/text_15"/>

    <TextView
        android:id="@+id/tvType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:hint="分类："
        android:padding="5dp"
        android:visibility="gone"/>

    <com.xds.project.widget.PaperButton
        android:id="@+id/btType"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="gone"
        widget:paper_color="@color/maincolor"
        widget:paper_corner_radius="19dp"
        widget:paper_text="选择分类"
        widget:paper_text_color="@color/white"
        widget:paper_text_size="15sp"/>

    <TextView
        android:id="@+id/tvFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:hint="请选择父类："
        android:padding="5dp"/>

    <com.xds.project.widget.PaperButton
        android:id="@+id/btAdd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        widget:paper_color="@color/maincolor"
        widget:paper_corner_radius="19dp"
        widget:paper_text="选择分类"
        widget:paper_text_color="@color/white"
        widget:paper_text_size="15sp"/>

    <com.xds.project.widget.PaperButton
        android:id="@+id/btUpLoadLocal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        widget:paper_color="@color/maincolor"
        widget:paper_corner_radius="19dp"
        widget:paper_text="新增"
        widget:paper_text_color="@color/white"
        widget:paper_text_size="15sp"/>
</LinearLayout>